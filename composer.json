{
    "name": "your-vendor/recruitment-task-processor",
    "description": "CLI application to process recruitment task source messages",
    "type": "project",
    "require": {
        "php": "^8.2.4",
        "symfony/console": "^6.0",
        "symfony/dependency-injection": "^6.0",
        "monolog/monolog": "^2.0",
        "psr/log": "^1.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "symfony/config": "^6.0"
    },
    "autoload": {
        "psr-4": { "App\\": "src/" }
    },
    "autoload-dev": {
        "psr-4": { "App\\Tests\\": "tests/" }
    }
}